<%= form_for(@shop) do |f| %>

<% if shop.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% shop.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title, '紹介店' %>
  <%= f.text_field :title %>
<br>
  <%= f.label :content, '紹介文' %>
  <%= f.text_field :content %>
  
  <%= f.submit '投稿' %>
<% end %>